<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- button normal -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/text</item>
        <item name="cornerRadius">@dimen/large_corner_radius</item>
        <item name="android:textSize">@dimen/button_1_text_size</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonPrimaryShortest" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/text</item>
        <item name="cornerRadius">@dimen/large_corner_radius</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:minHeight">@dimen/button_min_height4</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- button with border -->
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/text_gray</item>
        <item name="cornerRadius">@dimen/large_corner_radius</item>
        <item name="android:textSize">@dimen/button_1_text_size</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>